function formatCount(count) {
    count = parseInt(count)
    if(count >= 100000000) {
        return (count/100000000).toFixed(1) + "亿"
    }else if(count >= 10000) {
        return (count/10000).toFixed(1) + "万"
    }else {
        return count + ""
    }
}

function padLeftZero(str) {
    str = str.toString()
    return ("00"+str).slice(str.length)
}

function formatTime(durition, isMillSeconds) {
    durition = parseInt(durition)
    if(isMillSeconds) {
        durition = durition/1000
    }
    var min = Math.floor(durition/60)
    var sec = Math.floor(durition)%60
    // console.log(min + ':' + sec)
    return padLeftZero(min) + ':' + padLeftZero(sec)
}

module.exports={
    formatCount: formatCount,
    formatTime: formatTime,
}